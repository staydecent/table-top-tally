<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorForeground">@android:color/background_dark</item>
        <item name="android:textColorPrimary">@android:color/primary_text_light</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowBackground">?android:attr/colorBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- View specific-->

    <style name="Heading">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="Heading.Bold" parent="Heading">
        <item name="android:textColor">?android:colorForeground</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Heading.Inverted" parent="Heading">
        <item name="android:fontFamily">sans-serif-bold</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Heading.AllCaps" parent="Heading.Inverted">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="BodyText" parent="Heading.Bold">
        <item name="android:textSize">16sp</item>
    </style>

</resources>
