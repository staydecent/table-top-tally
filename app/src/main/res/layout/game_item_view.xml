<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_list_card"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0sp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    card_view:cardCornerRadius="0sp"
    card_view:cardElevation="0sp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="false"
    card_view:contentPadding="0sp"
    >

    <TextView
        android:id="@+id/game_text_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="18dp"
        android:background="@drawable/solid_color_shape"
        style="@style/Heading.Inverted"
        android:textColor="@color/text_state_list"
        android:text="This is some text"
        android:height="100sp" />

</android.support.v7.widget.CardView>
